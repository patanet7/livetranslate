# Auto-detect text files and perform LF normalization
* text=auto eol=lf

# Explicitly declare text files
*.py text eol=lf diff=python
*.pyx text eol=lf diff=python
*.pyi text eol=lf diff=python
*.pyw text eol=lf diff=python

*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.mjs text eol=lf
*.cjs text eol=lf

*.json text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf
*.conf text eol=lf

*.md text eol=lf diff=markdown
*.txt text eol=lf
*.rst text eol=lf

*.html text eol=lf diff=html
*.htm text eol=lf diff=html
*.css text eol=lf diff=css
*.scss text eol=lf diff=css
*.sass text eol=lf diff=css
*.less text eol=lf diff=css

*.xml text eol=lf
*.svg text eol=lf

*.sh text eol=lf
*.bash text eol=lf
*.zsh text eol=lf
*.fish text eol=lf

*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

*.sql text eol=lf

# Docker files
Dockerfile text eol=lf
Dockerfile.* text eol=lf
*.dockerfile text eol=lf
.dockerignore text eol=lf
docker-compose*.yml text eol=lf

# Git files
.gitignore text eol=lf
.gitattributes text eol=lf
.gitmodules text eol=lf

# CI/CD files
*.github/** text eol=lf
Makefile text eol=lf
Jenkinsfile text eol=lf

# Lock files - exact content matters
package-lock.json text eol=lf -diff
pnpm-lock.yaml text eol=lf -diff
yarn.lock text eol=lf -diff
pdm.lock text eol=lf -diff
poetry.lock text eol=lf -diff
Pipfile.lock text eol=lf -diff

# Binary files - do not normalize or diff
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
