# EditorConfig - https://editorconfig.org
# Ensures consistent coding styles across different editors and IDEs

# Top-most EditorConfig file
root = true

# ===========================================
# Default settings for all files
# ===========================================
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# ===========================================
# Python files
# ===========================================
[*.py]
indent_style = space
indent_size = 4
max_line_length = 100

# Python stubs
[*.pyi]
indent_style = space
indent_size = 4
max_line_length = 100

# ===========================================
# JavaScript/TypeScript files
# ===========================================
[*.js]
indent_style = space
indent_size = 2

[*.jsx]
indent_style = space
indent_size = 2

[*.ts]
indent_style = space
indent_size = 2

[*.tsx]
indent_style = space
indent_size = 2

[*.mjs]
indent_style = space
indent_size = 2

[*.cjs]
indent_style = space
indent_size = 2

# ===========================================
# Web files (HTML, CSS, SCSS)
# ===========================================
[*.html]
indent_style = space
indent_size = 2

[*.css]
indent_style = space
indent_size = 2

[*.scss]
indent_style = space
indent_size = 2

[*.less]
indent_style = space
indent_size = 2

# ===========================================
# Configuration files
# ===========================================
[*.json]
indent_style = space
indent_size = 2

[*.jsonc]
indent_style = space
indent_size = 2

[*.yaml]
indent_style = space
indent_size = 2

[*.yml]
indent_style = space
indent_size = 2

[*.toml]
indent_style = space
indent_size = 4

# ===========================================
# Shell scripts
# ===========================================
[*.sh]
indent_style = space
indent_size = 2
end_of_line = lf

[*.bash]
indent_style = space
indent_size = 2
end_of_line = lf

[*.zsh]
indent_style = space
indent_size = 2
end_of_line = lf

# PowerShell scripts
[*.ps1]
indent_style = space
indent_size = 2
end_of_line = crlf

[*.psm1]
indent_style = space
indent_size = 2
end_of_line = crlf

# ===========================================
# Makefiles (require tabs)
# ===========================================
[Makefile]
indent_style = tab
indent_size = 4

[makefile]
indent_style = tab
indent_size = 4

[*.mk]
indent_style = tab
indent_size = 4

# ===========================================
# Docker files
# ===========================================
[Dockerfile]
indent_style = space
indent_size = 4

[Dockerfile*]
indent_style = space
indent_size = 4

[docker-compose*.yml]
indent_style = space
indent_size = 2

# ===========================================
# Markdown files
# Preserve trailing whitespace (used for line breaks)
# ===========================================
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[*.mdx]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# ===========================================
# XML and SVG files
# ===========================================
[*.xml]
indent_style = space
indent_size = 2

[*.svg]
indent_style = space
indent_size = 2

# ===========================================
# SQL files
# ===========================================
[*.sql]
indent_style = space
indent_size = 4

# ===========================================
# Environment and config files
# ===========================================
[.env*]
indent_style = space
indent_size = 2

[.editorconfig]
indent_style = space
indent_size = 4

[.gitignore]
indent_style = space
indent_size = 2

[.gitattributes]
indent_style = space
indent_size = 2

# ===========================================
# Lock files (keep as-is)
# ===========================================
[pdm.lock]
indent_style = space
indent_size = 4
insert_final_newline = false

[poetry.lock]
indent_style = space
indent_size = 4
insert_final_newline = false

[package-lock.json]
indent_style = space
indent_size = 2
insert_final_newline = false

[pnpm-lock.yaml]
indent_style = space
indent_size = 2
insert_final_newline = false

[yarn.lock]
insert_final_newline = false

# ===========================================
# GitHub files
# ===========================================
[.github/**/*.yml]
indent_style = space
indent_size = 2

[.github/**/*.yaml]
indent_style = space
indent_size = 2

# ===========================================
# C/C++ files (for whisper-service-mac)
# ===========================================
[*.c]
indent_style = space
indent_size = 4

[*.cpp]
indent_style = space
indent_size = 4

[*.h]
indent_style = space
indent_size = 4

[*.hpp]
indent_style = space
indent_size = 4

# ===========================================
# Rust files
# ===========================================
[*.rs]
indent_style = space
indent_size = 4

# ===========================================
# Go files (require tabs)
# ===========================================
[*.go]
indent_style = tab
indent_size = 4

# ===========================================
# Text files
# ===========================================
[*.txt]
indent_style = space
indent_size = 2

[*.rst]
indent_style = space
indent_size = 3
