# Example Environment Configuration
# Copy this file to .env.development or .env.production and configure as needed

# API Base URL
VITE_API_BASE_URL=http://localhost:5173

# WebSocket URL - connects directly to orchestration service backend
# For pipeline real-time processing: ws://localhost:3000/pipeline/realtime/{sessionId}
# For general WebSocket: ws://localhost:3000/api/websocket/connect
VITE_WS_BASE_URL=ws://localhost:3000

# Backend orchestration service URL
VITE_ORCHESTRATION_URL=http://localhost:3000

# Debug settings
VITE_ENABLE_DEBUG=true
VITE_LOG_LEVEL=debug

# WebSocket configuration
VITE_WS_AUTO_RECONNECT=true
VITE_WS_MAX_RECONNECT_ATTEMPTS=3
VITE_WS_RECONNECT_INTERVAL=10000
VITE_WS_HEARTBEAT_INTERVAL=45000

# Service URLs (for direct connections if needed)
VITE_WHISPER_SERVICE_URL=http://localhost:5001
VITE_TRANSLATION_SERVICE_URL=http://localhost:5003
