# Development Environment Configuration
# Frontend runs on port 5173 with Vite dev server

# API Base URL - uses Vite proxy
VITE_API_BASE_URL=http://localhost:5173

# WebSocket URL - uses Vite proxy (IMPORTANT: must use same port as frontend)
# Vite will proxy /api/websocket/connect to ws://localhost:3000/api/websocket/connect
VITE_WS_BASE_URL=ws://localhost:5173

# Backend orchestration service
VITE_ORCHESTRATION_URL=http://localhost:3000

# Debug mode
VITE_ENABLE_DEBUG=true
VITE_LOG_LEVEL=debug

# WebSocket configuration
VITE_WS_AUTO_RECONNECT=true
VITE_WS_MAX_RECONNECT_ATTEMPTS=3
VITE_WS_RECONNECT_INTERVAL=10000
VITE_WS_HEARTBEAT_INTERVAL=45000
