# LiveTranslate Database Environment Configuration
# Copy to .env or source directly

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=livetranslate
POSTGRES_USER=livetranslate
POSTGRES_PASSWORD=livetranslate_dev_password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# pgAdmin Configuration
PGADMIN_PORT=8080
PGADMIN_EMAIL=admin@livetranslate.local
PGADMIN_PASSWORD=admin

# Database URLs for applications
DATABASE_URL=postgresql://livetranslate:livetranslate_dev_password@localhost:5432/livetranslate
REDIS_URL=redis://localhost:6379/0

# Connection Pool Settings
POSTGRES_MAX_CONNECTIONS=200
POSTGRES_IDLE_TIMEOUT=300
POSTGRES_STATEMENT_TIMEOUT=30000

# Performance Settings
POSTGRES_SHARED_BUFFERS=256MB
POSTGRES_EFFECTIVE_CACHE_SIZE=1GB
POSTGRES_MAINTENANCE_WORK_MEM=64MB

# Backup Settings
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESSION=true